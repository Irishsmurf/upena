#!/bin/bash

APP_ROOT=$(cd $(dirname $0)/..; pwd);
HOST=`grep InstanceConfig_default_routesHost $APP_ROOT/config/instance.properties | sed -e 's/.*=//g'`
PORT=`grep InstanceConfig_default_routesPort $APP_ROOT/config/instance.properties | sed -e 's/.*=//g'`

cd $APP_ROOT && curl http://${CONFIG_HOST}:${CONFIG_PORT}/manage/status
exit 0;