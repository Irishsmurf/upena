{namespace soy.page}

/**
 * Upena Status plugin page
 * 
 * @param? services
 */
{template .servicesPluginRegion}
    {if $services}
        <div class="panel panel-default">
            <div class="panel-heading">Services</div>
                <div class="panel-body">
                    <table class="table table-condensed">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Description</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <form id="add-host" class="j-form" data-active-class="btn-default" data-input-el="#requestPicker" data-form-el="#requestPickerForm"
                                data-jive-ui="jive/ui/typeahead/request_typeahead" method="get" name="addHost">
                                <tr>
                                    <td>
                                        <input type="text" autocomplete="off" role="combobox" style="width:280px; padding-left:10px;"
                                        placeholder="Name" value="" name="name" id="namePicker">
                                    </td>
                                    <td>
                                        <input type="text" autocomplete="off" role="combobox" style="width:280px; padding-left:10px;"
                                        placeholder="Description" value="" name="description" id="descriptionPicker">
                                    </td>
                                    <td>
                                        <input type="submit" name="filter" value="Filter"/>
                                        <input type="submit" name="action" value="Add"/>
                                    <td>
                                </tr>
                            </form>

                            {foreach $s in $services}
                                <form id="edit-host" class="j-form" data-active-class="btn-default" data-input-el="#requestPicker" data-form-el="#requestPickerForm"
                                    data-jive-ui="jive/ui/typeahead/request_typeahead" method="get" name="editHost">
                                    <tr>    
                                        <td>
                                            <input type="text" autocomplete="off" role="combobox" style="width:280px; padding-left:10px;"
                                            placeholder="Name" value="{$s.name}" name="name" id="namePicker">
                                        </td>
                                        <td>
                                            <input type="text" autocomplete="off" role="combobox" style="width:280px; padding-left:10px;"
                                            placeholder="Description" value="{$s.description}" name="description" id="descriptionPicker">
                                        </td>
                                        <td>
                                            <input type="hidden" name="key" value="{$s.key}">
                                            <input type="submit" name="action" value="Update"/>
                                            <input type="submit" name="action" value="Remove"/>
                                        <td>
                                    </tr>
                                </form>
                            {/foreach}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    {/if}
{/template}
